
<div class="shipment-container container col-xs-12">
  <div class="shipment-top">
    <div class="col-xs-4">
        <h3>Your Shipments</h3>
    </div>
    <div class="col-xs-4">
      <h5>Complete</h5>
      <h5>Open</h5>
      <h5>Received</h5>
    </div>

        <h4>Amount: <%= @shipments.count %></h4>
        <h5>
            <%= link_to "All", shop_shipments_path(@shop), remote: true%>
        </h5>
          <%= link_to "Completed", complete_shop_shipments_path(@shop), remote: true%>
        <h5>
          <%= link_to "Open", open_shop_shipments_path(@shop), remote: true%>
        </h5>
        <h5>
          <%= link_to "Received", received_shop_shipments_path(@shop), remote: true%>
        </h5>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th style="text-align: center;">Status</th>
        <th style="text-align: center;">Origin</th>
        <th style="text-align: center;">Destination</th>
        <th style="text-align: center;">Volume</th>
        <th style="text-align: center;">Service Value</th>
        <th style="text-align: center;">Freight Info</th>
        <th style="text-align: center;">Actions</th>
      </tr>
    </thead>
    <tbody id="shipmentList">
          <% @shipments.each_with_index do |shipment, index| %>
            <tr>
              <th scope="row"><%= index + 1 %></th>
              <td><%= shipment.status %></td>
              <td><%= shipment.origin %></td>
              <td><%= shipment.destination %></td>
              <td><%= shipment.freight_capacity.volume %></td>
              <td><%= number_to_currency(shipment.freight_capacity.service_value) %></td>
              <td><%= link_to "Freight Capacity", shop_shipment_freight_capacity_path(@shop, shipment.id, shipment.freight_capacity.id), { :remote => true, 'data-toggle' => 'modal', 'data-target' => "#exampleModal" } %></td>

              <td style="text-align: center;">
                <%= link_to "Edit", edit_shop_shipment_path(@shop, shipment) %>
                <%= link_to "Delete", shop_shipment_path(@shop, shipment), method: :delete, data: { confirm: 'Delete Shop and its information?' } %>
              </td>
            </tr>
          <% end %>
    </tbody>
  </table>
</div>

